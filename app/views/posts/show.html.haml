.posts-wrapper.row
  .post
    .post-head
      .name
        Tyler Wright
    .image.center-block
      =link_to (image_tag @post.image.url(:medium), class:'img-responsive'),  @post.image.url(:original)
    %p.caption
      =@post.caption
    .text-center.edit-links
      = link_to "Cancel", posts_path
      |
      = link_to "Edit Post", edit_post_path(@post)